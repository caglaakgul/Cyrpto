<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="coinModel"
            type="com.example.cryptocurrencypricetrackerapp.model.data.Coins" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewCryptoName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{coinModel.name}"
            tools:text="BTC"
            android:textSize="@dimen/medium_text_size_15"
            android:textStyle="bold"
            android:paddingStart="@dimen/small_10dp"
            android:paddingVertical="@dimen/small_10dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textViewCryptoSymbol"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/textViewCryptoSymbol"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{coinModel.symbol}"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size_15"
            android:textStyle="bold"
            android:paddingVertical="@dimen/small_10dp"
            tools:text="BTC"
            android:paddingEnd="@dimen/small_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textViewCryptoName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>