<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="detailViewModel"
            type="com.example.cryptocurrencypricetrackerapp.model.CoinDetailResponse" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".view.detail.DetailFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageViewDetailCardView"
            android:layout_width="0dp"
            android:layout_height="256dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.3"
            android:fitsSystemWindows="true"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewDetail"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:layout_gravity="bottom|left"
                android:downloadUrl="@{detailViewModel.image.large}"
                android:elevation="6dp"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@{detailViewModel.symbol}"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:layout_marginHorizontal="@dimen/margin_default"
            android:layout_marginTop="@dimen/small_20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/imageViewDetailCardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="22.10.2020" />

        <TextView
            android:id="@+id/textDetailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:text="@{detailViewModel.name}"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginTop="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            tools:text="Moonrise Kingdom (2006)" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:fillViewport="true"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDetailTitle">

            <TextView
                android:id="@+id/textDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:inputType="textMultiLine"
                android:text="@{detailViewModel.description.en}"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>